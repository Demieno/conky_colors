#!/bin/bash

#put your 5 day weather.com address here
address="http://www.weather.com/weather/5-day/$1"

#Change this variable to any other value than 1 if you don't want metric output
metrification=1

#Sun/Moon Rise/Set correction: set this variable to the difference of the value provided by weather.com
#and the value the script(wget) gives you. For example, if your conky says that the sun rises at 5:00
#and weather.com says that the sun rises at 4:00, make the variable equal to -1
sun_moon_correction=5

kill -STOP $(pidof conky)
killall wget

addr_now=$(echo $address|sed 's/5-day/today/')
wget -O $HOME/.conkycolors/Weather/RightNow/raw_rn $addr_now

wget -O $HOME/.conkycolors/Weather/5days/raw $address


if [[ -s $HOME/.conkycolors/Weather/RightNow/raw_rn ]]; then

	#############
	# Right now #
	#############
	sed -i '/twc-col-1 twc-animated-icon/,/twc-forecast-table twc-forecast-links-table/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn
	
	#file: days_rn
	sed '/twc-forecast-when/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/days_rn
	sed -i -e 's/^.*">//g' -e 's/<.*$//g' $HOME/.conkycolors/Weather/RightNow/days_rn
	
	#file: images_rn
	sed '/.png/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/images_rn
	sed -i -e 's/^.*src="//g' -e 's/".*$//g' -e 's/^.*\///g' $HOME/.conkycolors/Weather/RightNow/images_rn
	for (( i=1; i<=4; i++))
	    do
	        image=$(sed -n ${i}p $HOME/.conkycolors/Weather/RightNow/images_rn)
	        cp /usr/share/conkycolors/icons/Weather/$image $HOME/.conkycolors/Weather/r${i}.png
	    done
	
	#file: messages_rn
	sed '/.png/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/messages_rn
	sed -i -e 's/^.*alt="//g' -e 's/".*$//g' $HOME/.conkycolors/Weather/RightNow/messages_rn
	
	#file: temperatures_rn
	sed '/"twc-col-1 twc-forecast-temperature"/,/"merch-link"/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/temperatures_rn
	sed -i -e '/&deg;/!d' -e 's/^.*<strong>//g' -e 's/&deg;.*$//g' $HOME/.conkycolors/Weather/RightNow/temperatures_rn
	
	#file: precipitation_rn
	sed '/twc-col-1 twc-line-precip/,/"twc-col-1 twc-line-wind"/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/precipitation_rn
	sed -i -e '/^[ \t]*$/d' -e 's/^.*">//g' -e 's/<strong>//g' -e 's/<\/strong>.*$//g' $HOME/.conkycolors/Weather/RightNow/precipitation_rn
	sed -i -e 's/<br>/ /g' -e 's/<\/span>//g' -e '/<\|Wind/d' -e '/^[ \t]*$/d' -e 's/^[ \t]*//g' -e '/&nbsp/d' $HOME/.conkycolors/Weather/RightNow/precipitation_rn
	
	#file: wind_rn
	sed '/"twc-col-1 twc-line-wind"/,/twc-col-1 twc-line-nar/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/wind_rn
	sed -i -e '/^[ \t]*$/d' -e '/</d' -e 's/^[ \t]*//g' -e 's/From //g' -e 's/ .*$//g' -e 's/mph\|km//g' $HOME/.conkycolors/Weather/RightNow/wind_rn
	
	#file: messages_long_rn
	sed '/"twc-col-1 twc-line-nar"/,/twc-forecast-table twc-last/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/messages_long_rn
	sed -i -e 's/^.*twc-line-nar ">//g' -e 's/<\/td>.*$//g' -e '/<t\|<\/t/d' -e '/^[ \t]*$/d' -e 's/^[ \t]*//g' -e '/</d' $HOME/.conkycolors/Weather/RightNow/messages_long_rn
	
	#file: humidity_rn
	sed '/>Humidity:</,/>Dew Point:</!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/humidity_rn
	sed -i -e '/%/!d' -e 's/^.*first">//g' -e 's/^.*<\/span> //g' -e 's/<.*$//g' $HOME/.conkycolors/Weather/RightNow/humidity_rn
	
	#file: dew_point_rn
	sed '/>Dew Point:</,/>Pressure:</!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/dew_point_rn
	sed -i -e '/&deg;/!d' -e 's/^.*<\/span>//g' -e 's/&deg;.*$//g' $HOME/.conkycolors/Weather/RightNow/dew_point_rn
	
	#file: pressure_rn
	sed '/>Pressure:</,/>Visibility:</!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/pressure_rn
	sed -i -e '/</d' -e '/^[ \t]*$/d' -e '/in\|mb/d' -e 's/^[ \t]*//g' -e 's/[ \t].*$//g' $HOME/.conkycolors/Weather/RightNow/pressure_rn
	
	#file: visibility_rn
	sed '/>Visibility:</,/>UV Index:</!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/visibility_rn
	sed -i -e '/</d' -e '/^[ \t]*$/d' -e '/mi\|km/d' -e 's/^[ \t]*//g' -e 's/[ \t].*$//g' $HOME/.conkycolors/Weather/RightNow/visibility_rn
	
	#file: uv_rn
	sed '/>UV Index:</,/twc-col-1 twc-line-daylight/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/uv_rn
	sed -i -e '/</d' -e '/^[ \t]*$/d' -e 's/^[ \t]*//g' $HOME/.conkycolors/Weather/RightNow/uv_rn
	
	#file: sunr_suns_rn
	sed '/twc-col-1 twc-line-daylight/,/<\/table>/!d' $HOME/.conkycolors/Weather/RightNow/raw_rn > $HOME/.conkycolors/Weather/RightNow/sunr_suns_rn
	sed -i -e '/^[ \t]*$/d' -e 's/<strong>/\n/g' -e 's/^.*daylight">//g' -e '/^[ \t]*$/d' $HOME/.conkycolors/Weather/RightNow/sunr_suns_rn
	sed -i -e 's/<\/strong>.*$//g' -e '/</d' -e '/^[ \t]*$/d' -e 's/^[ \t]*//g' $HOME/.conkycolors/Weather/RightNow/sunr_suns_rn
	sed -i -e 's/^.*[a-z][a-z][a-z] [a-z][a-z][a-z] [0-9][0-9] //g' -e 's/:[0-9][0-9] .*$//g' $HOME/.conkycolors/Weather/RightNow/sunr_suns_rn 
	for (( i=4; i<=8; i+=2 ))
    do
        whole_time=$(sed -n ${i}p $HOME/.conkycolors/Weather/RightNow/sunr_suns_rn)
        time=$(echo $whole_time|sed 's/:.*$//g')
        minutes=$(echo $whole_time|sed 's/^.*:/:/g')
        corrected_time=$(( $time+$sun_moon_correction ))
        if (( corrected_time >= 24 )); then
            ((corrected_time-=24))
        fi
        sed -i $i"s/.*/$corrected_time/" $HOME/.conkycolors/Weather/RightNow/sunr_suns_rn 
        sed -i $i"s/$/$minutes/" $HOME/.conkycolors/Weather/RightNow/sunr_suns_rn
    done

fi


if [[ -s $HOME/.conkycolors/Weather/5days/raw ]]; then

	##################
	# 5 day forecast #
	##################
	sed -i '/twc-forecast-table twc-first/,/twc-forecast-table twc-forecast-links-table/!d' $HOME/.conkycolors/Weather/5days/raw
	
	#file: days
	egrep -i 'Mon |Tue |Wed |Thu |Fri |Sat |Sun ' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/days
	sed -i -e '/</d' -e 's/^[ \t]*//g' -e 's/ .*$//g' $HOME/.conkycolors/Weather/5days/days
	sed -i -e 's/mon/MON/g' -e 's/tue/TUE/g' -e 's/wed/WED/g' -e 's/thu/THU/g' -e 's/fri/FRI/g' -e 's/sat/SAT/g' -e 's/sun/SUN/g' $HOME/.conkycolors/Weather/5days/days
	
	#file: images
	egrep -i '.png' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/images
	sed -i -e 's/^.*src="//g' -e 's/".*$//g' $HOME/.conkycolors/Weather/5days/images
	sed -i -e 's/^.*\///g' $HOME/.conkycolors/Weather/5days/images
	
	#file: messages
	sed '/twc-wx-phrase1/,/twc-forecast-temperature-high/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/messages
	sed -i -e '/<t/d' -e '/<\/t/d' -e '/^\t*$/d' -e 's/^\t*//g' $HOME/.conkycolors/Weather/5days/messages
	
	#file: temperatures
	sed '/twc-forecast-temperature-high/,/twc-col-1 twc-line-precip/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/temperatures
	sed -i -e '/wx-hi\|wx-low/!d' -e 's/^.*<strong>//g' -e 's/^.*low[0-9]">//g' $HOME/.conkycolors/Weather/5days/temperatures
	sed -i -e 's/&deg;.*$//g' -e 's/<\/strong>.*$//g' $HOME/.conkycolors/Weather/5days/temperatures
	for (( i=1; i<=5; i++ ))
		do
			temp=$(sed -n $((i+5))p $HOME/.conkycolors/Weather/5days/temperatures)
			sed -i $i"s/$/ \/ $temp/" $HOME/.conkycolors/Weather/5days/temperatures
		done
	
	#file: precipitation
	sed '/twc-col-1 twc-line-precip/,/twc-col-1 twc-line-wind/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/precipitation
	sed -i -e '/Chance /!d' -e 's/^.*">//g' -e 's/<\/strong.*$//g' -e 's/<br><strong>/ /g' $HOME/.conkycolors/Weather/5days/precipitation
	
	#file: wind
	sed '/twc-col-1 twc-line-wind/,/twc-col-1 twc-line-humidity/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/wind
	sed -i -e '/^$/d' -e '/^\t*$/d' -e '/^ *$/d' -e 's/^ *\|^\t*//g' $HOME/.conkycolors/Weather/5days/wind
	sed -i -e '/</d' -e 's/^ *//g' -e 's/ .*$//g' $HOME/.conkycolors/Weather/5days/wind
	
	#file: humidity
	sed '/twc-col-1 twc-line-humidity/,/UV Index/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/humidity
	sed -i -e '/humidity/!d' -e 's/^.*<strong>//g' -e 's/<\/strong>.*$//g' $HOME/.conkycolors/Weather/5days/humidity
	
	#file: uv
	sed '/UV Index/,/twc-line-sunrise/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/uv
	sed -i -e '/^$/d' -e '/^\t*$/d' -e '/^ *$/d' -e 's/^ *\|^\t*//g' $HOME/.conkycolors/Weather/5days/uv
	sed -i -e '/</d' $HOME/.conkycolors/Weather/5days/uv
	
	#file: sunrise
	sed '/twc-line-sunrise/,/twc-line-sunset/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/sunrise
	sed -i -e '/^$/d' -e '/^\t*$/d' -e '/^ *$/d' -e 's/^ *\|^\t*//g' $HOME/.conkycolors/Weather/5days/sunrise
	sed -i -e '/</d' -e 's/^.*[a-z][a-z][a-z] [a-z][a-z][a-z] [0-9][0-9] //g' -e 's/ .*$//g' -e 's/:[0-9][0-9]$//g' $HOME/.conkycolors/Weather/5days/sunrise
	for (( i=1; i<=5; i++ ))
    do
        whole_time=$(sed -n ${i}p $HOME/.conkycolors/Weather/5days/sunrise)
        time=$(echo $whole_time|sed 's/:.*$//g')
        minutes=$(echo $whole_time|sed 's/^.*:/:/g')
        corrected_time=$(( $time+$sun_moon_correction ))
        if (( corrected_time >= 24 )); then
            ((corrected_time-=24))
        fi
        sed -i $i"s/.*/$corrected_time/" $HOME/.conkycolors/Weather/5days/sunrise 
        sed -i $i"s/$/$minutes/" $HOME/.conkycolors/Weather/5days/sunrise
    done
	
	#file: sunset
	sed '/twc-line-sunset/,/twc-line-moonrise/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/sunset
	sed -i -e '/^$/d' -e '/^\t*$/d' -e '/^ *$/d' -e 's/^ *\|^\t*//g' $HOME/.conkycolors/Weather/5days/sunset
	sed -i -e '/</d' -e 's/^.*[a-z][a-z][a-z] [a-z][a-z][a-z] [0-9][0-9] //g' -e 's/ .*$//g' -e 's/:[0-9][0-9]$//g' $HOME/.conkycolors/Weather/5days/sunset
	for (( i=1; i<=5; i++ ))
    do
        whole_time=$(sed -n ${i}p $HOME/.conkycolors/Weather/5days/sunset)
        time=$(echo $whole_time|sed 's/:.*$//g')
        minutes=$(echo $whole_time|sed 's/^.*:/:/g')
        corrected_time=$(( $time+$sun_moon_correction ))
        if (( corrected_time >= 24 )); then
            ((corrected_time-=24))
        fi
        sed -i $i"s/.*/$corrected_time/" $HOME/.conkycolors/Weather/5days/sunset 
        sed -i $i"s/$/$minutes/" $HOME/.conkycolors/Weather/5days/sunset
    done
	
	#file: moonrise
	sed '/twc-line-moonrise/,/twc-line-moonset/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/moonrise
	sed -i -e '/^$/d' -e '/^\t*$/d' -e '/^ *$/d' -e 's/^ *\|^\t*//g' $HOME/.conkycolors/Weather/5days/moonrise
	sed -i -e '/</d' -e 's/^.*[a-z][a-z][a-z] [a-z][a-z][a-z] [0-9][0-9] //g' -e 's/ .*$//g' -e 's/:[0-9][0-9]$//g' $HOME/.conkycolors/Weather/5days/moonrise
	for (( i=1; i<=5; i++ ))
    do
        whole_time=$(sed -n ${i}p $HOME/.conkycolors/Weather/5days/moonrise)
        time=$(echo $whole_time|sed 's/:.*$//g')
        minutes=$(echo $whole_time|sed 's/^.*:/:/g')
        corrected_time=$(( $time+$sun_moon_correction ))
        if (( corrected_time >= 24 )); then
            ((corrected_time-=24))
        fi
        sed -i $i"s/.*/$corrected_time/" $HOME/.conkycolors/Weather/5days/moonrise 
        sed -i $i"s/$/$minutes/" $HOME/.conkycolors/Weather/5days/moonrise
    done
	
	#file: moonset
	sed '/twc-line-moonset/,/twc-col-1 twc-line-daylight twc-moonphase-icon/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/moonset
	sed -i -e '/^$/d' -e '/^\t*$/d' -e '/^ *$/d' -e 's/^ *\|^\t*//g' $HOME/.conkycolors/Weather/5days/moonset
	sed -i -e '/</d' -e 's/^.*[a-z][a-z][a-z] [a-z][a-z][a-z] [0-9][0-9] //g' -e 's/ .*$//g' -e 's/:[0-9][0-9]$//g' $HOME/.conkycolors/Weather/5days/moonset
	for (( i=1; i<=5; i++ ))
    do
        whole_time=$(sed -n ${i}p $HOME/.conkycolors/Weather/5days/moonset)
        time=$(echo $whole_time|sed 's/:.*$//g')
        minutes=$(echo $whole_time|sed 's/^.*:/:/g')
        corrected_time=$(( $time+$sun_moon_correction ))
        if (( corrected_time >= 24 )); then
            ((corrected_time-=24))
        fi
        sed -i $i"s/.*/$corrected_time/" $HOME/.conkycolors/Weather/5days/moonset 
        sed -i $i"s/$/$minutes/" $HOME/.conkycolors/Weather/5days/moonset
    done

	
	#file: moonphase
	sed '/twc-col-1 twc-line-daylight twc-moonphase-icon/,/<\/table>/!d' $HOME/.conkycolors/Weather/5days/raw > $HOME/.conkycolors/Weather/5days/moonphase
	sed -i -e '/.gif/!d' -e 's/^.*src="//g' -e 's/" alt="/\n/g' -e 's/".*$//g' -e 's/^.*\///g' $HOME/.conkycolors/Weather/5days/moonphase
	for (( i=1; i<=9; i+=2))
	    do
	        image=$(sed -n ${i}p $HOME/.conkycolors/Weather/5days/moonphase)
	        cp /usr/share/conkycolors/icons/Weather_Moonphases/$image $HOME/.conkycolors/Weather/m$i.gif
	    done

fi

###################################################
# metrification of the output files - requires bc #
###################################################

if (( metrification==1 )); then

	if [[ -s $HOME/.conkycolors/Weather/RightNow/raw_rn && -s $HOME/.conkycolors/Weather/5days/raw && -s $HOME/.conkycolors/Weather/10days/raw10 ]]; then

	#TEMPERATURES: temperatures_rn, temperatures, temperatures10 files
	    
	    for (( i=1; i<=5; i++))
	        do
	            ftemp=$(sed -n ${i}p $HOME/.conkycolors/Weather/RightNow/temperatures_rn)
	            if [ $ftemp -eq $ftemp 2>/dev/null ]; then
	                nom=$(echo "5*($ftemp-32)"|bc)
	                ctemp=$(echo "$nom/9"|bc)
	                rem=$(echo "scale=1;10*($nom%9)"|bc|sed 's/\..*$//')
	                if (( rem<0 )); then
	                    ((rem*=-1))
	                fi
	                if (( rem>=5 && ctemp>0 )); then
	                    ((ctemp++))
	                elif (( rem>=5 && ctemp<0 )); then
	                    ((ctemp--))
	                fi
	                sed -i $i"s/$ftemp/$ctemp/" $HOME/.conkycolors/Weather/RightNow/temperatures_rn
	            fi
	            ftemp=$(sed -n ${i}p $HOME/.conkycolors/Weather/5days/temperatures|sed 's/ \/ .*$//')
	            if [ $ftemp -eq $ftemp 2>/dev/null ]; then
	                nom=$(echo "5*($ftemp-32)"|bc)
	                ctemp=$(echo "$nom/9"|bc)
	                rem=$(echo "scale=1;10*($nom%9)"|bc|sed 's/\..*$//')
	                if (( rem<0)); then
	                    ((rem*=-1))
	                fi
	                if (( rem>=5 && ctemp>0 )); then
	                    ((ctemp++))
	                elif (( rem>=5 && ctemp<0 )); then
	                    ((ctemp--))
	                fi
	                sed -i $i"s/^.* \//$ctemp \//" $HOME/.conkycolors/Weather/5days/temperatures
	            fi
	            ftemp=$(sed -n ${i}p $HOME/.conkycolors/Weather/5days/temperatures|sed 's/^.* \/ //')
	            if [ $ftemp -eq $ftemp 2>/dev/null ]; then
	                nom=$(echo "5*($ftemp-32)"|bc)
	                ctemp=$(echo "$nom/9"|bc)
	                rem=$(echo "scale=1;10*($nom%9)"|bc|sed 's/\..*$//')
	                if (( rem<0)); then
	                    ((rem*=-1))
	                fi
	                if (( rem>=5 && ctemp>0 )); then
	                    ((ctemp++))
	                elif (( rem>=5 && ctemp<0 )); then
	                    ((ctemp--))
	                fi
	                sed -i $i"s/\/ .*$/\/ $ctemp/" $HOME/.conkycolors/Weather/5days/temperatures
	            fi
	    done
	
	#WIND SPEED: wind_rn, wind, wind10 files
	    
	    for (( i=2; i<=8; i+=2 ))
	        do
	            mi=$(sed -n ${i}p $HOME/.conkycolors/Weather/RightNow/wind_rn)
	            if [ $mi -eq $mi 2>/dev/null ]; then
	                km=$(echo "($mi*1.609344)/1"|bc)
	                rem=$(echo "10*($(echo "($mi*1.609344)"|bc)-$km)/1"|bc)
	                if (( $rem>5 )); then
	                    ((km++))
	                fi
	                sed -i $i"s/^.*$/$km/" $HOME/.conkycolors/Weather/RightNow/wind_rn
	            fi
	        done
	    for (( i=2; i<=10; i+=2 ))
	        do
	            mi=$(sed -n ${i}p $HOME/.conkycolors/Weather/5days/wind)
	            if [ $mi -eq $mi 2>/dev/null ]; then
	                km=$(echo "($mi*1.609344)/1"|bc)
	                rem=$(echo "10*($(echo "($mi*1.609344)"|bc)-$km)/1"|bc)
	                if (( $rem>5 )); then
	                    ((km++))
	                fi
	                sed -i $i"s/^.*$/$km/" $HOME/.conkycolors/Weather/5days/wind
	            fi
	        done
	
	#VISIBILITY: visibility_rn file
	
	        mi=$(sed -n 1p $HOME/.conkycolors/Weather/RightNow/visibility_rn)
	        km=$(echo "scale=2;($mi*1.609344)/1"|bc)
	        sed -i "1s/^.*$/$km/" $HOME/.conkycolors/Weather/RightNow/visibility_rn
	
	#DEW POINT: dew_point_rn file
	
	        ftemp=$(sed -n 1p $HOME/.conkycolors/Weather/RightNow/dew_point_rn)
	        if [ $ftemp -eq $ftemp 2>/dev/null ]; then
	            nom=$(echo "5*($ftemp-32)"|bc)
	            ctemp=$(echo "$nom/9"|bc)
	            rem=$(echo "scale=1;10*($nom%9)"|bc|sed 's/\..*$//')
	            if (( rem<0)); then
	                ((rem*=-1))
	            fi
	            if (( rem>=5 && ctemp>0 )); then
	                ((ctemp++))
	            elif (( rem>=5 && ctemp<0 )); then
	                ((ctemp--))
	            fi
	            sed -i "1s/^.*$/$ctemp/" $HOME/.conkycolors/Weather/RightNow/dew_point_rn
	        fi
	
	#PRESSURE: pressure_rn file
	
	        in=$(sed -n 1p $HOME/.conkycolors/Weather/RightNow/pressure_rn)
	        mb=$(echo "scale=2;($in*33.864)/1"|bc)
	        sed -i "1s/^.*$/$mb/" $HOME/.conkycolors/Weather/RightNow/pressure_rn
	
	#PRECIPITATION: precipitation_rn file
	
	        for (( i=1; i<=10; i++))
	            do
	                pr=$(sed -n ${i}p $HOME/.conkycolors/Weather/RightNow/precipitation_rn|sed '/[0-9]*.[0-9]* in/!d')
	                if [[ $pr != "" ]]; then
	                    pr_in=$(echo $pr|sed 's/ .*$//')
	                    pr_cm=$(echo "scale=2;($pr_in*2.54)/1"|bc)
	                    temp=$(echo "10*$pr_cm/1"|bc)
	                    if (( $temp < 10 && $temp > 0 )); then
	                        sed -i -e ${i}"s/$pr_in/0$pr_cm/" -e ${i}'s/ in / cm /' $HOME/.conkycolors/Weather/RightNow/precipitation_rn
	                    else 
	                        sed -i -e ${i}"s/$pr_in/$pr_cm/" -e ${i}'s/ in / cm /' $HOME/.conkycolors/Weather/RightNow/precipitation_rn
	                    fi
	                fi
	            done
	
	#LONG MESSAGES: messages_long_rn file
	
			cp $HOME/.conkycolors/Weather/RightNow/messages_long_rn $HOME/.conkycolors/Weather/RightNow/messages_long_rn_metric
			sed -i 's/\..*$/\./g' $HOME/.conkycolors/Weather/RightNow/messages_long_rn_metric

	fi

fi

kill -CONT $(pidof conky)
